#!/usr/bin/env ruby
# dehashrocketify

# 20171211
# 0.7.0

# Changes since 0.6:
# 1. Tests!

def ruby_filenames
  if ARGV[0]
    if File.directory?(ARGV[0])
      Dir.glob("#{ARGV[0]}/**/*.{erb,rb,rabl,rake}")
    else
      Dir[ARGV[0]]
    end
  else
    Dir.glob("./**/*.{erb,rb,rabl,rake}")
  end
end

def main
  ruby_filenames.each do |ruby_filename|
    contents = File.read(ruby_filename)
    if contents =~ /([^\:])\:(\w+[?!]*) *=>/
      puts ruby_filename
      new_contents = contents.gsub(/([^\:])\:(\w+[?!]*) *=>/, "\\1\\2:")
      File.write(ruby_filename, new_contents)
    end
  end
end

main
